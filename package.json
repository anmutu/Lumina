{
  "name": "kdp-picture-book-generator",
  "version": "1.0.0",
  "description": "KDP绘本PDF内容生成器 - 专业的儿童绘本制作工具",
  "main": "src/main-simple.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "kdp",
    "picture-book",
    "pdf-generator",
    "publishing",
    "amazon"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.yourcompany.kdp-picture-book-generator",
    "productName": "KDP绘本PDF生成器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
